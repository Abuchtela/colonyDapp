[ignore]
.*\.yalc
.*/__tests__/.*
.*/utils/test/.*
.*/src/lib/colonyNetwork/.*
.*/src/lib/pinningService/.*
.*/node_modules/findup/.*

[include]
.*/src/.*

[libs]

[lints]

[options]
module.ignore_non_literal_requires=true
module.name_mapper='^.*\.css$' -> 'css-module-flow'
module.name_mapper='^.*\.(svg)$' -> 'empty/string'
module.name_mapper='^\~core\/\(.*\)$' -> '<PROJECT_ROOT>/src/modules/core/components/\1'
module.name_mapper='^\~utils\/\(.*\)$' -> '<PROJECT_ROOT>/src/utils/\1'
module.name_mapper='^\~styles\/\(.*\)$' -> '<PROJECT_ROOT>/src/styles/shared/\1'

[strict]
