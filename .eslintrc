{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "@colony/eslint-config-colony",
        "plugin:flowtype/recommended",
        "eslint-config-airbnb/rules/react"
    ],
    "overrides": [
        {
            "files": "*.test.js",
            "rules": {
                "flowtype/require-valid-file-annotation": "off"
            }
        }
    ],
    "plugins": ["flowtype", "prettier"],
    "rules": {
        "flowtype/require-valid-file-annotation": [1, "always"],
        "import/extensions": [2, { "js": "never", "jsx": "always" }],
        "import/no-extraneous-dependencies": [
            2,
            { "devDependencies": ["**/*.test.js", "./src/utils/test/*.js", "./src/__mocks__/*.js", "./*.js"] }
        ],
        "object-curly-newline": ["error", { "consistent": true }],
        "react/jsx-filename-extension": [1, { "extensions": [".test.js", ".jsx"] }],
        "react/require-default-props": 0,
        "react/sort-comp": [2, {
            "order": [
                "type-annotations",
                "static-methods",
                "lifecycle",
                "everything-else",
                "render"
            ]
        }]
    },
    "settings": {
        "import/resolver": {
            "jest": {
              "jestConfigFile": "./jest.conf.json"
            },
            "webpack": {}
        }
    }
}
